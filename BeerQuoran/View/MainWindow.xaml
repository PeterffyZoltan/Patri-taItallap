<Window x:Class="BeerQuoran.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeerQuoran"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"        
        >

    <Window.Resources>
        <Style TargetType="{x:Type Button}"
               x:Key="btn_RedHighlight">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Margin="0 0 0 0"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="0" 
                                Padding="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type Button}"
               x:Key="btn_WhiteHighlight">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="0" 
                                Padding="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>


    <Grid>
        <StackPanel x:Name="gr_windowStyle"
                    Height="25"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Margin="0 0 0 0"
                    >
            <Button x:Name="btn_hide"
                    Width="30"
                    Height="25"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Content="_"
                    Style="{StaticResource btn_WhiteHighlight}"
                    Click="btn_hide_Click"
                    />
            <Button x:Name="btn_resize"
                    Width="30"
                    Height="25"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Content="[]"
                    Style="{StaticResource btn_WhiteHighlight}"
                    Click="btn_resize_Click"
                    />
            <Button x:Name="btn_close"
                    Width="30"
                    Height="25"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"                    
                    Content="X"
                    Style="{StaticResource btn_RedHighlight}"
                    Click="btn_close_Click"                    
                    />
        </StackPanel>

        <Grid x:Name="gr_header"
              Margin="0 25 0 0"
              Height="65"
              VerticalAlignment="Top"
              Background="Red"
              >
            <Border x:Name="br_titleHolder"
                    Height="65"
                    Width="150"
                    HorizontalAlignment="Center"
                    Padding="0 0 0 0"
                    BorderThickness="0"
                    >
                <TextBlock x:Name="tbl_title"
                           Text="Brewdog Craft Beer"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Width="135"
                           Padding="0 0 0 0"
                           Margin="0 0 0 0"
                           FontWeight="Bold"
                           FontSize="14"
                           />
            </Border>
        </Grid>

        <Grid>
            <Button x:Name="btn_start"
                    Width="125"
                    Height="50"
                    Content="Search"
                    />
        </Grid>
    </Grid>
</Window>
